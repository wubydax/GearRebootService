<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/protectiveView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/protective_layout_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="72dp"
        android:paddingEnd="72dp"
        android:weightSum="3"
        android:id="@+id/rebootContainer">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/mainReboot">

            <ImageView
                android:id="@+id/rebootIcon"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:contentDescription="@string/global_action_icon"
                android:src="@drawable/tw_ic_do_restart"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/rebootText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="@string/reboot"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/recoveryReboot">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:contentDescription="@string/global_action_icon"
                android:src="@drawable/tw_ic_do_restart"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="@string/reboot_recovery"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/powerOff">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:contentDescription="@string/global_action_icon"
                android:src="@drawable/tw_ic_do_poweroff"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="@string/power_off"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>